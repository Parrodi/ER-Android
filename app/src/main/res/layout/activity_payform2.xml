<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="38dp">

        <ImageView
            android:id="@+id/pagoForma1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:srcCompat="@drawable/pago1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticketType"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Adulto"
                android:textColor="#00007f"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ticketPrice"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="33dp"
                android:text="$150.00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/numOfTickets"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignTop="@+id/ticketPrice"

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-11dp"
                android:layout_marginEnd="68dp"
                android:layout_marginBottom="31dp"
                android:text="10"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lessTickets"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_alignBottom="@+id/numOfTickets"
                android:layout_toStartOf="@+id/numOfTickets" />

            <Button
                android:id="@+id/moreTickets"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/numOfTickets"
                android:layout_marginStart="-68dp"
                android:layout_toEndOf="@+id/numOfTickets" />

        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/Continuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000066"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:text="Continuar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />





</android.support.constraint.ConstraintLayout>